{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "/usr/bin/python3.7"
        },
        {
            "name": "g++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/media-server/ws_media_server",
            "args": [
                "${cwd}/src/settings_offline.yml",
                "1",
                "1"
            ],
            // "program": "${workspaceFolder}/src/media-server/run_servers",
            // "args": ["${cwd}/src/settings.yml"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
                // {   "description":"In this mode GDB will be attached to both processes after a call to fork() or vfork().",
                //     "text": "-gdb-set detach-on-fork off",
                //     "ignoreFailures": true
                // },
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": true
            },
        },
    ]
}